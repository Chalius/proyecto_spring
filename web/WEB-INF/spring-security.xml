        <!--security:intercept-url pattern="/agregar.htm" access="!hasAuthority('ROLE_Usuario')" /-->    
    
    
        <!-- punto 5.6 lab15 daw, modificando la pÃ¡gina access denied -->
        <security:access-denied-handler error-page="/acceso-denegado.htm" />
    
